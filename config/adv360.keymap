#include "general.h"
#include <behaviors.dtsi>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    behaviors {
        #include "macros.dtsi"
      #include "version.dtsi"
      #ifndef VERSION_MACRO

        #endif

        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;

            require-prior-idle-ms = <150>;
            quick-tap-ms = <175>;
            hold-trigger-key-positions = <29 30 31 32 41 42 43 44 15 16 63 64 24>;
            hold-trigger-on-release;
        };

        smart_shift: smart_shift {
            compatible = "zmk,behavior-mod-morph";
            label = "SMART_SHIFT";
            bindings = <&sk LEFT_SHIFT>, <&caps_word>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        smart_backspace: smart_backspace {
            compatible = "zmk,behavior-hold-tap";
            label = "SMART_BACKSPACE";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            quick-tap-ms = <175>;
            tapping-term-ms = <280>;
            hold-trigger-key-positions = <65>;
            flavor = "balanced";
            require-prior-idle-ms = <150>;
            hold-trigger-on-release;
        };
    };

    macros {
        vim_write: vim_write {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp COLON &kp W &kp ENTER>;
            label = "VIM_WRITE";
        };

        vim_quit: vim_quit {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp COLON &kp Q &kp EXCL &kp ENTER>;
            label = "VIM_QUIT";
        };

        relative_dir: relative_dir {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp TILDE &kp SLASH>;
            label = "RELATIVE_DIR";
        };

        select_line: select_line {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp HOME>, <&macro_press>, <&kp LEFT_SHIFT &kp END>;

            label = "SELECT_LINE";
        };

        L_HYPR: L_HYPR {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(LS(LA(LEFT_GUI)))>;
            label = "L_HYPR";
        };
    };

    combos {
        compatible = "zmk,combos";

        esc_homerow {
            bindings = <&kp ESC>;
            key-positions = <17 18>;
        };

        tab_homerow {
            bindings = <&kp TAB>;
            key-positions = <23 24>;
        };

        combo_vimwrite {
            bindings = <&vim_write>;
            key-positions = <50 51>;
        };

        combo_vimquit {
            bindings = <&vim_quit>;
            key-positions = <54 55>;
        };

        move_workspace_left {
            bindings = <&kp LG(LC(LEFT_ARROW))>;
            key-positions = <33 32>;
        };

        move_workspace_right {
            bindings = <&kp RG(RC(RIGHT_ARROW))>;
            key-positions = <41 40>;
        };

        relative_dir {
            bindings = <&relative_dir>;
            key-positions = <32 65>;
        };

        select_line {
            bindings = <&select_line>;
            key-positions = <47 48>;
        };

        hyphen {
            bindings = <&kp MINUS>;
            key-positions = <57 58>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&trans  &trans          &trans          &trans              &trans            &trans  &mo 4                                                                             &mo 4        &trans  &trans             &trans               &trans           &trans           &trans
